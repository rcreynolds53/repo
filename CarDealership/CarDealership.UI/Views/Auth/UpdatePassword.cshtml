@model CarDealership.Models.UpdatePasswordViewModel

@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Password</h2>

<div class="row">
    <div class="col-lg-6">
        <h1 class="text-center">Update Password</h1>
        @using (Html.BeginForm("UpdatePassword", "Auth", FormMethod.Post))
        {
            @*@Html.ValidationSummary(true)*@
            @*@Html.*@
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="fomr-group">
                <label>Old Password</label>
                @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>New Password</label>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary">Update Password</button>
            <br />
            <br />
            <br />
            <div>
                @if (TempData["PasswordUpdate"] != null)
                {
                    if (!TempData["PasswordUpdate"].ToString().Contains("Error"))
                    {
                    <div class="center-block">
                        <p class="alert alert-success text-center" id="successMessage">
                            @TempData["PasswordUpdate"]
                        </p>
                    </div>
                    }
                    else
                    {
                        <div class="center-block">
                            <p class="alert alert-danger text-center" id="successMessage">
                                @TempData["PasswordUpdate"]
                            </p>
                        </div>
                    }
                }
            </div>
        }
    </div>
</div>

